<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href="https://fonts.googleapis.com/css?family=Hanalei+Fill|Indie+Flower" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
  </head>

  <body>
      <div class="navbar-lewagon">
      <%= link_to cocktails_path, class: 'custom' do%>
        <%= image_tag "vomie.jpeg", alt: "vomie", width: 100 %>
      <% end %>
      <%= link_to cocktails_path, class: 'custom' do%>
        <h1>Blueueueururrrrrr</h1>
      <% end %>

        <!-- displayed on laptops -->
        <div class="navbar-lewagon-actions d-none d-sm-flex">
          <a href="#" class="navbar-lewagon-link"></a>
            <%= link_to "add a cocktail", new_cocktail_path, class: 'btn btn-success btn lg' %>
        </div>

        <!-- displayed on phone / tablet -->
        <div class="navbar-lewagon-actions d-block d-sm-none">
          <div class="dropdown">
            <i class="fas fa-bars" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <a href="#" class="dropdown-item"><i class="fas fa-home"></i></a>
              <a href="#" class="dropdown-item"><i class="fas fa-comments"></i><span class="badge badge-pill badge-secondary text-white">5</span></a>
              <a class="dropdown-item" href="#"><i class="fas fa-user"></i></a>
              <a class="dropdown-item" href="#"><i class="fas fa-cogs"></i></a>
              <a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt"></i></a>
            </div>
          </div>
        </div>
      </div>
    <%= yield %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag "application" %>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>
