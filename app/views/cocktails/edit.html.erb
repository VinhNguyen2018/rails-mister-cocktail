<div class="container text-center">
  <h1><%= @cocktail.name %></h1>
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name, placeholder: 'Type the cocktail name', input_html: {style: 'width:300px !important;'} %>

    <%= f.button :submit, class: 'btn btn-primary btn-lg'  %>
  <% end %>
</div>
